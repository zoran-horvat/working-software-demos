@page "{productId}"
@model Demo.Pages.Products.DetailsModel
<table class="table table-striped">
    <thead>
        <tr class="table-secondary">
            <th scope="col" colspan="2">Product Details</th>
        </tr>
    </thead>
    <tbody>
    <tr>
        <td>Name</td>
        <td>@Model.Product.Name</td>
    </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">
                <a class="btn btn-primary" asp-page="/Products/Index">Back</a>
            </td>
        </tr>
    </tfoot>
</table>
@{
    ViewData["Title"] = "Product Details";
}
